{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@assistant-ui/react": [
        "../assistant-ui/packages/react/src/index.ts"
      ],
      "@assistant-ui/react/*": [
        "../assistant-ui/packages/react/src/*"
      ],
      "@assistant-ui/react-ai-sdk": [
        "../assistant-ui/packages/react-ai-sdk/src/index.ts"
      ],
      "@assistant-ui/react-ai-sdk/*": [
        "../assistant-ui/packages/react-ai-sdk/src/*"
      ],
      "@assistant-ui/react-markdown": [
        "../assistant-ui/packages/react-markdown/src/index.ts"
      ],
      "@assistant-ui/react-markdown/*": [
        "../assistant-ui/packages/react-markdown/src/*"
      ],
      "@assistant-ui/react-devtools": [
        "../assistant-ui/packages/react-devtools/src/index.ts"
      ],
      "@assistant-ui/react-devtools/*": [
        "../assistant-ui/packages/react-devtools/src/*"
      ],
      "@assistant-ui/tap": [
        "../assistant-ui/packages/tap/src/index.ts"
      ],
      "@assistant-ui/tap/*": [
        "../assistant-ui/packages/tap/src/*"
      ],
      "assistant-stream": [
        "../assistant-ui/packages/assistant-stream/src/index.ts"
      ],
      "assistant-stream/*": [
        "../assistant-ui/packages/assistant-stream/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../assistant-ui/packages/*/src/**/*.ts",
    "../assistant-ui/packages/*/src/**/*.tsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
